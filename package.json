{
  "name": "pi-kiosk-shared",
  "version": "2.1.0",
  "private": false,
  "description": "Shared components and utilities for Pi Kiosk system",
  "keywords": [
    "kiosk",
    "react",
    "typescript",
    "components"
  ],
  "author": "tehacko@seznam.cz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tehacko/pi-kiosk-shared"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "publish:local": "npm run build && npm pack --pack-destination ../",
    "prepublishOnly": "npm run build",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "rimraf": "^5.0.0"
  }
}
